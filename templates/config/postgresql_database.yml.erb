development: &default
  adapter: postgresql
  database: <%= app_name %>_development
  encoding: utf8
  host: <%= db_host || 'localhost' %>
<%= "  port: #{db_port}" if db_port %>
<%= "  username: #{db_username}" if db_username %>
<%= "  password: #{db_password}" if db_password %>
  min_messages: warning
  pool: 2
  timeout: 5000

test:
  <<: *default
  database: <%= app_name %>_test
